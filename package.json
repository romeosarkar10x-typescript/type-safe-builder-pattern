{
    "name": "type-safe-builder-pattern",
    "description": "Implementation of the 'Builder' design pattern in typescript",
    "version": "0.0.1",
    "author": "Romeo Sarkar",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/romeosarkar10x-typescript/type-safe-builder-pattern.git"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "prettier": "^3.7.4"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "typescript",
        "builder",
        "builder-pattern",
        "type-safe-builder-pattern",
        "type-safe"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.src.json",
        "format": "prettier --write \"**/*.{mjs,mts,json}\"",
        "check-formatting": "prettier --check \"**/*.{mjs,mts,json}\"",
        "type-check": "tsc -p tsconfig.test.json"
    },
    "engines": {
        "node": ">=25"
    },
    "engineStrict": true
}
